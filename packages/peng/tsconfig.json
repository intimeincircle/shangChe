{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "types": ["@emotion/react/types/css-prop", "node"],
    "jsxImportSource": "@emotion/react",
    // Specify module resolution strategy: "node" (Node.js) or "classic" (TypeScript pre-1.6)
    "moduleResolution": "node",
    // Enable all strict type-checking options. Recommended by TS
    "strict": true,
    // Enables emit interoperability between CommonJS and ES Modules via creation of namespace objects for all imports.
    // Implies "allowSyntheticDefaultImports". Recommended by TS
    "esModuleInterop": true,
    // Skip type checking of declaration files. Recommended by TS
    "skipLibCheck": true,

    // Disallow inconsistently-cased references to the same file. Recommended by TS
    "forceConsistentCasingInFileNames": true,
    // Do not emit outputs
    "noEmit": true,
    "skipDefaultLibCheck": true,
    // Raise error on expressions and declarations with an implied "any" type
    "noImplicitAny": true,
    // Report errors on unused locals
    "noUnusedLocals": false,
    // Report errors on unused parameters
    "noUnusedParameters": true,
    "allowJs": true,
    // Report error when not all code paths in function return a value
    "noImplicitReturns": true,
    // Report errors for fallthrough cases in switch statement
    "noFallthroughCasesInSwitch": true,
//    "explainFiles": true,
    "baseUrl": "../",
    "typeRoots": [
      "./types",
      "./src/types"
    ],
    "paths": {
//      "@react-financial-charts/interactive": ["interactive/lib"],
//      "@react-financial-charts/annotations": ["annotations/lib"],
//      "@react-financial-charts/axes": ["axes/lib"],
//      "@react-financial-charts/coordinates": ["coordinates/lib"],
//      "@react-financial-charts/scales": ["scales/lib"],
//      "@react-financial-charts/series": ["series/lib"],
//      "@react-financial-charts/utils": ["utils/lib"],
//      "@react-financial-charts/tooltip":["tooltip/lib"],
//      "@react-financial-charts/indicators": ["indicators/lib"],
      "kun-tools/built/*": ["kun-tools/src/*"],
      "kun-shared/built/*": ["kun-shared/src/*"]
    }
  },
  "include": ["./src", "./types"],
  "exclude": ["node_modules", "../kun-shared","kun-shared", "kun-shared/built", "../../node_modules"]
}
