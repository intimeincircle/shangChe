{
    "compilerOptions": {
      "module": "commonjs",
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "strictFunctionTypes": false,
      "moduleResolution": "node",
      "alwaysStrict": true,
      "noImplicitThis": true,
      "noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true,
      "target": "es5",
      "typeRoots": ["./src/types"],
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "outDir": "built",
      "sourceMap": true,
      "newLine": "LF",
      "allowJs": true,
      "downlevelIteration": true,
      "baseUrl": "./",
      "noEmitOnError": false,
      "jsx": "preserve",
      "lib": ["esnext", "dom"],
      "paths": {
        "kun-tools/built/*": ["kun-tools/src/*"]
      }
    },

    "include": ["src"],
    "exclude": ["node_modules", "src/common", "**/*.spec.ts", "**/**/*.spec.ts"]
  }